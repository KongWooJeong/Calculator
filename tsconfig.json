{
	"compilerOptions": {
		"target": "es5",
		"module": "CommonJS",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noEmit": true,
	},
	"include": [
		"src/**/*"
	]
}
